<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/clyt_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"

        tools:context=".MainActivity">

        <FrameLayout
            android:id="@+id/flyt_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/clyt_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></FrameLayout>


        <!--<View-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="@dimen/y1"-->
        <!--android:layout_marginBottom="@dimen/y49"-->
        <!--android:background="#E6E6E6"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"></View>-->

        <LinearLayout
            android:id="@+id/clyt_bottom"
            android:layout_width="0dp"
            android:layout_height="@dimen/y50"
            android:background="#f2f2f2"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <LinearLayout
                android:id="@+id/llyt_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/iv_index"
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/y22"
                    android:layout_marginTop="@dimen/y6"
                    android:background="@drawable/bg_main_btn_index"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:text="首页"
                    android:textColor="#000000"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_transition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_transition"
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/y22"
                    android:layout_marginTop="@dimen/y8"
                    android:background="@drawable/bg_main_btn_transition"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:text="一键转换"
                    android:textColor="#000000"
                    android:textSize="@dimen/x10" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llyt_community"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_community"
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/y22"
                    android:layout_marginTop="@dimen/y8"
                    android:background="@drawable/bg_main_btn_community"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:text="社区"
                    android:textColor="#000000"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ordr"
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/y24"
                    android:layout_marginTop="@dimen/y6"
                    android:background="@drawable/bg_main_btn_order"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:text="我的"
                    android:textColor="#000000"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:background="@drawable/bg_main_btn_my"
                    android:id="@+id/iv_my"
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/y24"
                    android:layout_marginTop="@dimen/y6"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:text="我的"
                    android:textColor="#000000"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>